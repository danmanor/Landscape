<% layout('layouts/boilerplate') %>

<div class="row d-flex justify-content-center">
    <h1 class="text-center">Edit landscape</h1>
    <div class="col-8">
        <form action="/landscapes/<%=landscape._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="landscape[title]"
                    value="<%=landscape.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="landscape[location]"
                    value="<%=landscape.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="landscape[description]"
                    required><%= landscape.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Add more image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <% landscape.images.forEach(function(img, i) {  %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline d-flex align-items-center">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    <label for="image-<%=i%>">Delete?</label>
                </div>
                <% })%>
            </div>
            <div class="my-5">
                <button class="btn btn-info mr-3">Update landscape</button>
                <a href="/landscapes/<%= landscape._id%>" class="btn btn-primary">Back To landscape</a>
            </div>
        </form>
    </div>
</div>