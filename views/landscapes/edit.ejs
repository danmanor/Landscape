<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit landscape</h1>
    <div class="col-6 offset-3">
        <form action="/landscapes/<%=landscape._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="landscape[title]"
                    value="<%=landscape.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="landscape[location]"
                    value="<%=landscape.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="landscape[image]"
                    value="https://source.unsplash.com/collection/483251" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="landscape[description]"
                    required><%= landscape.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update landscape</button>
            </div>
        </form>
        <a href="/landscapes/<%= landscape._id%>">Back To landscape</a>

    </div>
</div>